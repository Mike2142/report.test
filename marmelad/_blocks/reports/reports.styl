.b-reports
    
    &__header 
        display: flex 
        align-items center 
        position relative
        background-color #F7F9DB
        padding: 8px 100px 8px 20px
        color: #2F353B;
        font-size 15px
        line-height 1.2
        margin-bottom 40px
        
        &-inner 
            flex 1 
            display flex 
            align-items center 
            flex-wrap wrap 
            margin-right 40px
        
        .b-main-checkbox
            margin 0 0 0 auto 
            width 363px      

    &__link 
        max-width 500px
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        
    &__entrance
        font-size 0
        display inline-block
        margin-left 6px
        
        .on
            display none
        
        &.js-active
            .on 
                display block
            
            .off 
                display none
        
    &__button 
        position absolute
        right 40px
        top 16px
        color: #2F353B;
        font-size 13px
        line-height 1.3
        border-bottom: 1px dashed #2F353B;
        text-decoration none
        
        &:hover 
            text-decoration none
        
        &:before 
            content attr(data-close)

        &:after 
            content ''
            display block
            position absolute
            left 100%
            top 5px
            margin-left 6px
            border-style: solid;
            border-width: 0 4px 4px 4px;
            border-color: transparent transparent #a2aeb7 transparent;
        
        &.js-close 
            &:before 
                content attr(data-open)
            
            &:after 
                transform rotate(180deg)

    &__content 
        margin-bottom 40px
    
    &__item 
        padding: 30px 0
        display: flex 
        color: #2F353B;
        font-size 15px
        
        & + & 
            border-top 1px solid #F6F8FA
            
        &-tag 
            font-size 18px
            line-height 21px
            text-transform uppercase
            position absolute
            left -45px
            top 0
        
        &-text 
            & + & 
                padding-top 20px
        
        &-content 
            line-height 25px
            flex 1 
            padding: 0 45px 
            position relative
            
            &-title 
                font-weight: 500
                padding-bottom 10px
        
        &-title 
            font-size 18px
            line-height 21px
            margin-bottom 20px
            position relative
            
            &--h1 
                font-size 30px
                line-height 36px
                
                .b-reports__item-tag
                    top 8px
        
        &-table 
            width 490px
            
            &-title 
                font-weight: 500
                line-height 18px
                padding-bottom 10px
                
    
