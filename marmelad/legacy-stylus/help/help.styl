.b-help
	display inline-block
	vertical-align middle
	position relative
	margin-left 4px
	
	&__content 
		position absolute
		top 100%
		margin-top 10px
		left -70px
		width: 293px;
		padding: 12px 16px
		background-color #fff
		border: 1px solid #696d72;
		color: #2f353b;
		font-size: 14px;
		font-weight: 500;
		line-height: 20px;
		border-radius 4px
		z-index 1
		opacity 0
		visibility hidden
		transition .3s linear all
		
		&:before, &:after 
			content ''
			display block
			position absolute
			left 77px
			bottom 100%
			border-style: solid;
			transform translateX(-50%)
			
		&:before
			border-width: 0 10px 8px 10px;
			border-color: transparent transparent #000 transparent;

		&:after 
			border-width: 0 9px 7px 9px;
			border-color: transparent transparent #FFFFFF transparent;		
	
	&__button 
		width 16px
		height 16px
		display: flex 
		align-items center 
		justify-content center 
		border 1px solid #e1e4e6
		border-radius 100px			
		background-color #fff
		color #a5aeb5
		font-size 12px
		text-decoration none  !important
		transition .3s linear all 
		
	&:hover
		z-index 5
		.b-help__button 
			border-color #2F353B
			color #2F353B
		
		.b-help__content
			opacity 1
			visibility visible
	
	&.js-opened 
		z-index 8
		.b-help__button 
			border-color #283239
			background #283239
			color #fff
		
		.b-help__content
			opacity 1
			visibility visible
